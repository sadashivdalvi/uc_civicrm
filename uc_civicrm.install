<?php

/**
 * @file
 * Install, update and uninstall functions for uc_civicrm.
 */

/**
 * Implements hook_uninstall().
 * 
 * Removes the module variables
 */
function uc_civicrm_uninstall() {
  $results = db_query("SELECT v.name FROM {variable} AS v WHERE v.name LIKE '%s%%'", 'uc_civicrm_');
  while ($row = db_fetch_array($results)) { variable_del($row['name']); }
}
